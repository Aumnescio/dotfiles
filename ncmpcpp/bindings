### - Aumnescio `ncmpcpp` Keybindings - ###

#: NOTE: Aborting an action is done by pressing `Ctrl-g` once or twice, and it cannot by simply rebound to another key.
#: NOTE: Ordering sets the priority for bindings where the key is the same.

#: Core
def_key "q"
    quit

def_key "p"
    pause

def_key "s"
    stop

def_key ">"
    next

def_key "<"
    previous

def_key "v"
    select_item

def_key "i"
    show_song_info

def_key "I"
    show_artist_info

def_key "d"
    delete_playlist_items

def_key "d"
    delete_browser_items

def_key "d"
    delete_stored_playlist

def_key "y"
    save_tag_changes

def_key "U"
    update_database

#: Views
def_key "f1"
    show_help

def_key "1"
    show_playlist

def_key "2"
    show_browser

def_key "2"
    change_browse_mode

def_key "3"
    show_search_engine

def_key "3"
    reset_search_engine

def_key "4"
    show_media_library

def_key "4"
    toggle_media_library_columns_mode

def_key "5"
    show_playlist_editor

def_key "6"
    show_tag_editor

def_key "7"
    show_outputs

def_key "8"
    show_visualizer

#: Edit
def_key "e"
    edit_song

def_key "e"
    edit_library_tag

def_key "e"
    edit_library_album

def_key "e"
    edit_directory_name

def_key "e"
    edit_playlist_name

def_key "e"
    edit_lyrics

def_key "E"
    jump_to_tag_editor

#: Enter
def_key "enter"
    enter_directory

def_key "enter"
    toggle_output

def_key "enter"
    run_action

def_key "enter"
    play_item

def_key "tab"
    next_screen

def_key "shift-tab"
    previous_screen

def_key "ctrl-h"
    jump_to_parent_directory

def_key "backspace"
    jump_to_parent_directory

def_key "ctrl-a"
    add

def_key "A"
    add_selected_items

def_key "v"
    move_sort_order_up

def_key "m"
    move_sort_order_down

#: Selection
def_key "V"
    reverse_selection

def_key "ctrl-v"
    remove_selection

# def_key "ctrl-v"
#     select_range

#: Command runner
def_key ":"
    execute_command

def_key "l"
    execute_command

#: Up/Down navigation
def_key "h"
    scroll_down

def_key "shift-h"
    select_item
    scroll_down

def_key "alt-h"
    move_selected_items_down

def_key "alt-t"
    move_selected_items_up

def_key "M"
    move_selected_items_to

def_key "t"
    scroll_up

def_key "shift-t"
    select_item
    scroll_up

def_key "page_down"
    page_down

def_key "page_up"
    page_up

def_key "g"
    move_home

def_key "G"
    move_end

#: Left/Right Navigation
def_key "left"
    previous_column

def_key "right"
    next_column

def_key "left"
    master_screen

def_key "right"
    slave_screen

# Forward / Backward in Song
def_key "n"
    seek_forward

def_key "o"
    seek_backward

#: Volume Control
def_key "left"
    volume_down

def_key "right"
    volume_up

#: Searching
# Search forward in normal view.
def_key "r"
    find

def_key "r"
    find_item_forward

def_key "."
    next_found_item

def_key ","
    previous_found_item

def_key "?"
    find

def_key "?"
    find_item_backward

# Activate search in `search engine`.
def_key "w"
    start_searching

#: Playlist
def_key "a"
     add_item_to_playlist

def_key "j"
    jump_to_playing_song

def_key "shift-s"
    save_playlist

def_key "ctrl-s"
    sort_playlist

def_key "c"
    clear_playlist

def_key "c"
    clear_main_playlist

def_key "C"
    crop_playlist

def_key "C"
    crop_main_playlist

# Play Modes
def_key "R"
    toggle_repeat

def_key "z"
    toggle_random

def_key "f"
    toggle_consume

def_key "w"
    toggle_find_mode

def_key "y"
    toggle_single

def_key "Y"
    toggle_replay_gain_mode

def_key "T"
    toggle_add_mode

def_key "|"
    toggle_mouse

def_key "#"
    toggle_bitrate_visibility

def_key "Z"
    shuffle

def_key "x"
    toggle_crossfade

def_key "u"
    toggle_playing_song_centering

def_key "ctrl-s"
    toggle_browser_sort_mode

def_key "ctrl-s"
    toggle_media_library_sort_mode

