snippet !doctype_html "!DOCTYPE html declaration."
	<!DOCTYPE html>

snippet !boilerplate_core "Core HTML Boilerplate."
	<!DOCTYPE html>
	<html lang="en">
	<!-- --------------- -->
	<!-- START => \`HEAD\` -->
	<!-- --------------- -->
	<head>
		<title> ${1:Title} </title>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta name="description" content="<insert-description-here>" />
		<link rel="stylesheet" href="/src/style.css">
	</head>
	<!-- ------------- -->
	<!-- END => \`HEAD\` -->
	<!-- ------------- -->
	<!-- ==-===-===-== -->
	<!-- --------------- -->
	<!-- START => \`BODY\` -->
	<!-- --------------- -->
	<body>
		<!-- ---------------------------- -->
		<!-- START => \`Core Body Content\` -->
		<!-- ---------------------------- -->

		<div class="app"></div>$0

		<!-- -------------------------- -->
		<!-- END => \`Core Body Content\` -->
		<!-- -------------------------- -->
		<!-- ===-===-===-=-===-===-=== -->
		<!-- ------------------------- -->
		<!-- START => \`Script Section\` -->
		<!-- ------------------------- -->

		<script type="module" src="/src/main.ts"></script>

		<!-- ----------------------- -->
		<!-- END => \`Script Section\` -->
		<!-- ----------------------- -->
	</body>
	<!-- ------------- -->
	<!-- END => \`BODY\` -->
	<!-- ------------- -->
	</html>
	<!-- ----------- -->
	<!-- End of File -->
	<!-- ----------- -->

